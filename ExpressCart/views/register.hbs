<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/register.css">
    
         
    <title>Register Form</title> 
</head>
<body>
    
    <div class="container">
        <div class="forms">
            <!-- Registration Form -->
            <div class="form login">
                <span class="title">Registration</span>
                <form action="/auth/register" method="POST">
                    <div class="input-field">
                        <input type="text" id="username" name="username" placeholder="Enter Username" required>
                        <i class="uil uil-user"></i>
                    </div>
                    <div class="input-field">
                        <input type="email" id="email" name="email" placeholder="Enter your email" required>
                        <i class="uil uil-envelope icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" id="password" class="password" name="password" placeholder="Create a password" required>
                        <i class="uil uil-lock icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" id="passwordConfirm" class="password" name="passwordConfirm" placeholder="Confirm a password" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    <div class="checkbox-text">
                        <div class="checkbox-content">
                            <input type="checkbox" id="termCon">
                            <label for="termCon" class="text">I accepted all terms and conditions</label>
                        </div>
                    </div>
                    <div class="input-field button">
                        {{#if message }}
                                      <h4 class="alert alert-danger mt-2">{{message}}</h4>
                        {{/if}}
                        <button type="submit" class="input-field button">Signup</button>
                        
                    </div>
                </form>
                <div class="login-signup">
                    <span class="text">Already a member?
                        <a href="#" class="text" onclick="window.location.href='/login'">Login Now</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
     <script src="/auth.js"></script>
     	<!-- Jquery Counterup JS -->
	<script src="/jquery-counterup.min.js"></script>
		<!-- Jquery -->
    <script src="/jquery.min.js"></script>
    <script src="/jquery-migrate-3.0.0.js"></script>
	<script src="/jquery-ui.min.js"></script>
</body>
</html>