<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
    <!-- ===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <!-- ===== CSS ===== -->
    <link rel="stylesheet" href="/resetpass.css">

	
	<!-- shop StyleSheet -->
	<link rel="stylesheet" href="/style.css">
    <link rel="stylesheet" href="/responsive.css">
	<link rel="stylesheet" href="/myStyle.css">
    
         
    <title>Reset Password Form</title> 
</head>
<body>
    <!-- Preloader -->
	<div class="preloader">
		<div class="preloader-inner">
			<div class="preloader-icon">
				<span></span>
				<span></span>
			</div>
		</div>
	</div>
	<!-- End Preloader -->
    
    <div class="container">
        <div class="forms">
            <!-- Forgot Pass Form -->
            <div class="form resetpass">
                <span class="title">Reset Password</span>
                <form action="/resetpass" method="post">
                    <div class="input-field">
                        <input type="text" placeholder="Enter your Username" name="user_name" required>
                        <i class="uil uil-user"></i>
                     </div>
                    <div class="input-field">
                        <input type="email" placeholder="Enter your Email" name="email" required>
                        <i class="uil uil-envelope icon"></i>
                     </div>
                     <div class="input-field">
                        <input type="password" id="password" class="password" name="newPassword" placeholder="Enter New Password" required>
                        <i class="uil uil-lock icon"></i>
                    </div>
                    <div class="input-field">
                        <input type="password" class="password" placeholder="Confirm Password" name="confirmPassword" required>
                        <i class="uil uil-lock icon"></i>
                        <i class="uil uil-eye-slash showHidePw"></i>
                    </div>
                    <div class="login-signup">
                    <span class="text">Password Reseted?
                        <a href="#" class="text" onclick="window.location.href='/login'">Login Now</a>
                    </span>
                    </div>
                    {{#if message }}
                        <h5 class="alert alert-danger mt-2">{{message}}</h5>
                    {{/if}}
                    <div class="input-field button">
                        <button type="submit" class="input-field button">Reset Pass</button>
            
                    </div>
                </form>
            </div>
        </div>
    </div>
     <script src="/auth.js"></script>
     	<!-- Jquery Counterup JS -->
	<script src="/jquery-counterup.min.js"></script>
		<!-- Jquery -->
    <script src="/jquery.min.js"></script>
    <script src="/jquery-migrate-3.0.0.js"></script>
	<script src="/jquery-ui.min.js"></script>
    <!-- Jquery -->
    <script src="/jquery.min.js"></script>
    <script src="/jquery-migrate-3.0.0.js"></script>
	<script src="/jquery-ui.min.js"></script>
	<!-- Popper JS -->
	<script src="/popper.min.js"></script>
	<!-- Bootstrap JS -->
	<script src="/bootstrap.min.js"></script>
	<!-- Color JS -->
	<script src="/colors.js"></script>
	<!-- Magnific Popup JS -->
	<script src="/magnific-popup.js"></script>
	<!-- Nice Select JS -->
	<script src="/nicesellect.js"></script>
	<!-- Onepage Nav JS -->
	<script src="/onepage-nav.min.js"></script>
	<!-- Active JS -->
	<script src="/active.js"></script>
</body>
</html>
